<launch>
  	<!-- export ROS_MASTER_URI=http://192.168.1.206:11311 -->

	<!-- Left Motor -->
	<node name="left_motor" pkg="phidgets" type="motor" args="_serial:=473027 __name:=left_motor _name:=left_motor _frequency:=125" >
		<param name="_serial" value="473027" />
		<param name="__name" value="left_motor" />
		<param name="_name" value="left_motor" />
		<param name="_frequency" value="125" />
	</node>

	<!-- Right Motor -->
	<node name="right_motor" pkg="phidgets" type="motor" args="_serial:=475396 __name:=right_motor _name:=right_motor _frequency:=125" >
		<param name="_serial" value="475396" />
		<param name="__name" value="right_motor" />
		<param name="_name" value="right_motor" />
		<param name="_frequency" value="125" />
	</node>

	<!-- Localization -->
	<node name="localization" pkg="localization" type="localization.py" />

	<!-- Odometry -->
	<include file="$(find odometry)/launch/odometry.launch"/>
		
	
	<node name="laser_broadcaster" pkg="localization" type="laser_broadcaster.py" />
	<!--
	<node pkg="tf" type="static_transform_publisher" name="laser_broadcaster" args="0.08 -0.009 0.0 0 0 -91.5*pi/180 wheel_center laser 8" />
	-->	
	<node name="robot_broadcaster" pkg="localization" type="robot_broadcaster.py" />
	
	<!-- Laser scanner -->
	<include file="$(find rplidar_ros)/launch/rplidar.launch"/>
	
	<!-- Wheel Controller -->
	<include file="$(find wheels)/launch/controller.launch"/>

	<!-- Realsense Camera -->
	<!-- <include file="$(find realsense_camera)/launch/sr300_nodelet_rgbd.launch" /> -->

	<!-- UArm Core -->
	<node name="uarm_core" pkg="uarm" output="screen" type="uarm_core.py" args="connect l"/>

</launch>
